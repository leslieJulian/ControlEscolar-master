<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEspecialidad">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Especialidad" />
        <TextView
            android:id="@+id/tvt_plan_estudiosEspecialidadEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/tv_nombre_especialidadEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre de la especialidad" />

        <Switch
            android:id="@+id/switchEditarEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado de la especialidad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="150dp"
                android:onClick="regresar"
                android:layout_height="wrap_content"
                android:text="Cancelar"></Button>

            <Button
                android:id="@+id/btn_registrar_especialidad"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="guardarEspecialidadEdicion"
                android:text="Registar"></Button>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>